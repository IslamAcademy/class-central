                        {% endif %}
                        <b class="caret"></b>
                        <img src="http://placehold.it/50x50">
                    </a>
                    <ul class="mainMenu_sub mainMenu_sub-right">

                        <li class="mainMenu_item">
                            <a href="{{ path('user_library') }}" class="mainMenu_link" onClick="ga('send','event', '{{ navEventName }}', 'Class Central User Menu')" title="My Courses">
