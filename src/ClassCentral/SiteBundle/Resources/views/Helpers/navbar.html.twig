        {% else %}
            <ul class="mainMenu mainMenu-withSpacers">
                <li class="mainMenu_item">
                    <a href="{{ path('login') }}" class="mainMenu_link" onClick="ga('send','event', '{{ navEventName }}', 'Login')">
                        Sign in
                    </a>
                </li>

                <li class="mainMenu_item mainMenu_item-spacer">/</li>
                <li class="mainMenu_item">
                    <a href="{{ path('signup') }}" id="navbar-create-free-account" class="mainMenu_link" title="Class Central Signup" onClick="ga('send','event', '{{ navEventName }}', 'Class Central Signup User Menu')" title="Class Central Signup">
                        Sign Up
                    </a>
                </li>
            </ul>
        {% endif %}

      </div>
    </div>

    
  </div>
      
