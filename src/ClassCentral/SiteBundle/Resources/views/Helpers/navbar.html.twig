        <div class="burger">
          <div class="burger_inner">
            <span class="burger_bar burger_bar-first"></span>
            <span class="burger_bar burger_bar-second"></span>
          </div>
          <span class="sr-only">Toggle navigation</span>        
        </div>
      </div>
      
      <div class="navbar_toggleText">Menu</div>
    </a>

    <div class="navbar_right">

        <a href="#" class="pulseCircle js-tour-point" id="tour-point-search" data-step-nr="0">
            <div class="pulseCircle_dot"></div>
            <div class="pulseCircle_pulse"></div>
        </a>

      <div class="navbar_search">
        

        <a href="#" class="searchLink js-openSearchModal" onmousedown="ga('send','event', '{{ navEventName }}', 'Search')">
          <div class="searchLink_icon">
            <div class="u-scaling-svg">
